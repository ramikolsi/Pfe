Vagrant.configure("2") do |config|
  config.vm.define "windows_vm" do |windows|
    windows.vm.box = "gusztavvargadr/windows-server"
    windows.vm.network "public_network", ip: "192.168.1.7"
    windows.vm.provider "virtualbox" do |vb|       
      vb.gui = true
    end

    windows.vm.provision "shell", inline: <<-SHELL
      netsh interface ipv4 set address name="Ethernet 2" static 192.168.1.7 255.255.255.0 192.168.1.1
    SHELL
  end
end
